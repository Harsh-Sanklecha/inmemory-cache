{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}